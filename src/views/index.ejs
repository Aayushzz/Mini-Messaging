<!-- views/index.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <body>
  <h1 class="title"><%= title %></h1>
  <div class="chat-container">
    <div class="messages-container">
      <!-- Loop through messages and display user, text, and date -->
      <% messages.forEach(function(message) { %>
        <div class="message-container">
          <p class="user"><%= message.user %></p>
          <p class="text"><%= message.text %></p>
          <p class="date"><%= message.added.toISOString() %></p>
        </div>
      <% }); %>
    </div>
    <!-- Include the form partial -->
  </div>
  <form method="POST" action="/new" class="form">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" name="user" placeholder="Your Name">
      
      <label for="message">Message</label>
      <textarea name="text" placeholder="Type your message..."></textarea>
  
      <input type="submit" value="Send" class="button">
    </div>
  </form>
  </body>
</html>
